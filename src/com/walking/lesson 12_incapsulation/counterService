public class CounterService {
    private final String name; // поле Имя
    final String unitName; //поле единица измерения
    int counter; // поле счетчик
    
    public CounterService(String name, int counter, String unitName) { //создаем конструктор
        this.name = name; // с полем Имя
        this.counter = counter; // и полем Счетчик
        this.unitName = unitName; // и полем Единица измерения
    }

    public void setCounter(int counter) { //сеттер счетчика на любое число
        this.counter = counter;
    }

    public int getCounter() { //геттер значения счетчика
        return counter;
    }

    public String getName() { //геттер имени счетчика
        return name;
    }
    public int incrimentOne(){ //увеличение на 1
        counter++;
        return counter;
    }

    public int reset() { //присваивание 0 счетчику
        counter = 0;
        return counter;
    }
}
